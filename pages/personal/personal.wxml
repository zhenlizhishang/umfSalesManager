<view class="page">
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">登录名</view>
                <view class="weui-cell__ft">{{username}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">姓名</view>
                <view class="weui-cell__ft">{{name}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">手机号</view>
                <view class="weui-cell__ft">{{phone}}</view>
            </view>
        </view>
    </view>
    <view class="page__bd page__bd_spacing weui-footer_fixed-bottom">
      <view class="button-sp-area">
        <button class="weui-btn" type="default" plain="true" bindtap='exitLogin'>退出登陆</button>
      </view>
    </view>
</view>